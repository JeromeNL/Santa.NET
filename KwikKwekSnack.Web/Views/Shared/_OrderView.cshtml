@using KwikKwekSnack.Data.Utils
@model KwikKwekSnack.Data.Models.OrderItem

@{
    var product = ProductUtil.GetProductFromOrderItem(@Model!);
}

<div class="card mb-3">
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <div class="d-flex flex-row align-items-center">
                <div>
                    <img
                        src="@product!.ImageUrl"
                        class="rounded-3" alt="Shopping item" style="height: 100px; width: 100px; object-fit: contain"/>
                </div>
                <div class="mx-4">
                    <h5 class="mb-0">@product.Name</h5>
                    <p class="small mb-0">
                        @ProductUtil.GenerateProductDescription(@Model!)
                    </p>
                </div>
            </div>
            <div class="d-flex flex-row align-items-center">
                <div class="me-3">
                    <h5 class="fw-normal mb-0">@Model!.Amount</h5>
                </div>
                <div class="me-3">
                    <h5 class="mb-0">@ProductUtil.CalculateProductPrice(@Model)</h5>
                </div>
            </div>
        </div>
    </div>
</div>